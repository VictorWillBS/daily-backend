generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users{
  id Int @id @default(autoincrement())
  name String 
  email String @unique
  password String
  photo String 
  question Questions[]
  fellings Fellings[]

  @@map("users")

}

model Questions{
  id Int @id @default(autoincrement())
  question String 
  answer String
  user Users @relation(fields: [userId], references: [id])
  userId Int 
  @@unique([question,userId])
  @@map("question")

}
model Fellings{
  id Int @id @default(autoincrement())
  day DateTime 
  felling String
  user Users @relation(fields: [userId], references: [id])
  userId Int 
  @@unique([felling,day])
  @@map("fellings")
}